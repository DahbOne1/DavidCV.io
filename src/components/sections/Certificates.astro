---
import { certificates } from "@cv";
import SectionContainer from "../SectionContainer.astro";
---

<SectionContainer title="Certificados">
    <ul>
        {certificates.map(({name,date,issuer,url}) => {
            return(
                <li>
                    <article>
                        <header>
                            <h3>
                                <a href={url} title={`Ver la certificaciÃ³n de ${name}`} target="_blank">
                                    {issuer}
                                </a>
                            </h3>
                        </header>
                        <footer>
                            <h4>
                               {name} 
                            </h4>
                            <span>{date}</span>
                        </footer>    
                    </article>
                </li>
            )

        })}

    </ul>

</SectionContainer>


<style>
    ul{
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(120px, 1fr)
        );
        gap: 1rem;
    }

    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 8px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }

    article h3{
        margin-bottom: 4px;
    }

    article a{
        color: #111;
        font-size: 1rem;
    }

    article a:hover{
        text-decoration: underline;
    }

    footer{
        display: flex;
        flex-wrap: wrap;
        gap:4px;
        font-size: 0.7rem;
       
    }

    footer span{
        color: #444;
        font-size: 0.5rem;
        font-weight: 500;
    }

</style>