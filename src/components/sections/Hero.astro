---
import {basics} from '@cv';
import SectionContainer from '../SectionContainer.astro';
import GmailIcon from '../icons/GmailIcon.astro';
import Phone from '../icons/Phone.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import Github from '../icons/Github.astro';

const {name, label, image, location, profiles, phone, email} = basics;
const {country, state, city} = location;
const SOCIAL_ICONS: Record<string,any> = {
    LinkedIn,
    Github,
}

const linkedInfo = profiles.find(({network}) => network === "LinkedIn");
const githubInfo = profiles.find(({network}) => network == "Github");

const linkedUrl = linkedInfo?.url
const githubUrl = githubInfo?.url

const printInfo = [email, phone, linkedUrl, githubUrl].filter(Boolean).join(" | ")
---

<SectionContainer>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                {country}, {state}, {city}
            </span>

            <footer class="print">
                {printInfo}
            </footer>
            
            <footer class="no-print">
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title={`Enviar un correo electrónico a ${name} al correo ${email}`}
                        target="_blank"
                        rel="nooopener noreferrer">
                            <GmailIcon></GmailIcon>
                        </a>
                    )
                }
                {
                    phone && (
                        <a href={`mailto:${phone}`}
                        title={`Llamar por teléfono a ${name} al número ${phone}`}
                        target="_blank"
                        rel="nooopener noreferrer">
                        <Phone></Phone>

                        </a>
                    )
                }
                {
                    profiles.map(({network,url,username})=>{
                        let IconMedia = SOCIAL_ICONS[network];
                        return(
                            <a href={url}
                            title={`Visitar el perfil de ${username} en ${network}`}
                            target="_blank"
                            rel="noopener noreferrer">
                            
                            <IconMedia></IconMedia>
                            
                            </a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name}>
        </figure>
    </div>
</SectionContainer>



<style>
    .container{
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        gap: 1rem;
    }

    .info{
        display: flex;
        flex-direction: column;
        gap: .5rem;
        padding-right: 20px;
    }

    h1{
        font-size:  2rem;
    }

    h2{
        color: #444;
        font-weight: 300px;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img{
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 150px;
        border-radius: 16px;
    }

    span{
        color: #666;
        display: flex;
        align-items: center;
        gap: .25rem;
        font-size: ;
    }

    footer{
        font-size: 0.65rem;
        color: #555;
        display:flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a{
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        transition: all 0.4s ease;
    }


    footer a:hover{
        background-color: #eee;
        border: 1px solid #ddd;
    }

    @media only screen and (max-width: 480px) {
        .container{
            flex-direction: column-reverse;
        }

        img{
            aspect-ratio: 6/5;
            width: 100%;
            top: 0;
        }

        h1{
            font-size:  2.2rem;
        }
    }



</style>